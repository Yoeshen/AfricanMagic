@model AfricanMagicSystem.Models.AnalyticsViewModel
@{
    ViewBag.Title = "Index";
    var random = new Random();
}

<script src="//cdnjs.cloudflare.com/ajax/libs/d3/3.4.4/d3.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="~/Scripts/d3pie.min.js"></script>


<div class="row">
    <div class="col-lg-4">
        <div id="pieChart2">
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
        <div id="pieChart">
        </div>
    </div>
</div>
<script>
    var pie = new d3pie("pieChart2", {
        "header": {
            "title": {
                "text": "AfricanMagic Analytics",
                "fontSize": 24,
                "font": "open sans"
            },
            "subtitle": {
                "text": "A pie chart displaying the current analytics of the AfricanMagic system.",
                "color": "#999999",
                "fontSize": 12,
                "font": "open sans"
            },
            "titleSubtitlePadding": 9
        },
        "footer": {
            "color": "#999999",
            "fontSize": 10,
            "font": "open sans",
            "location": "bottom-left"
        },
        "size": {
            "canvasWidth": 590
        },
        "data": {
            "sortOrder": "value-desc",
            "content": [

                @foreach(var item in Model.SaleDateForToday)
                {
                    var color = String.Format("#{0:X6}", random.Next(0x10000000));
                    <text>{
                    "label": "@item.SaleDate.Value.ToString("dd-MM-yyyy")",
                    "value": 3,
                    "color": "@color"
                },</text>
                }
            ]
        },
        "labels": {
            "outer": {
                "pieDistance": 32
            },
            "inner": {
                "hideWhenLessThanPercentage": 3
            },
            "mainLabel": {
                "fontSize": 11
            },
            "percentage": {
                "color": "#ffffff",
                "decimalPlaces": 0
            },
            "value": {
                "color": "#adadad",
                "fontSize": 11
            },
            "lines": {
                "enabled": true
            }
        },
        "effects": {
            "pullOutSegmentOnClick": {
                "effect": "linear",
                "speed": 400,
                "size": 8
            }
        },
        "misc": {
            "gradient": {
                "enabled": true,
                "percentage": 100
            }
        }
    });
</script>

<br />

<script>
            var pie = new d3pie("pieChart", {
                "header": {
                    "title": {
                        "text": "Our Top Orders",
                        "fontSize": 34,
                        "font": "courier"
                    },
                    "subtitle": {
                        "text": "Top orders for the past 10 days.",
                        "color": "#999999",
                        "fontSize": 10,
                        "font": "courier"
                    },
                    "location": "pie-center",
                    "titleSubtitlePadding": 10
                },
                "footer": {
                    "text": "* This data is directly from our database.",
                    "color": "#999999",
                    "fontSize": 10,
                    "font": "open sans",
                    "location": "bottom-left"
                },
                "size": {
                    "canvasWidth": 590,
                    "pieInnerRadius": "95%",
                    "pieOuterRadius": "80%"
                },
                "data": {
                    "sortOrder": "label-desc",
                    "content": [

                        @foreach (var item in Model.SaleData)
                        {
                            var color = String.Format("#{0:X6}", random.Next(0x1000000)); // = "#A197B9"
                            <text>{
                                    "label": "@item.SaleDate.Value.ToString("dd-MM-yyyy")",
                                    "value": 3,
                                    "color": "@color"
                                },</text>
                        }

                    ]
                },
                "labels": {
                    "outer": {
                        "format": "label-percentage1",
                        "pieDistance": 20
                    },
                    "inner": {
                        "format": "none"
                    },
                    "mainLabel": {
                        "fontSize": 11
                    },
                    "percentage": {
                        "color": "#999999",
                        "fontSize": 11,
                        "decimalPlaces": 0
                    },
                    "value": {
                        "color": "#cccc43",
                        "fontSize": 11
                    },
                    "lines": {
                        "enabled": true,
                        "color": "#777777"
                    }
                },
                "effects": {
                    "pullOutSegmentOnClick": {
                        "effect": "linear",
                        "speed": 400,
                        "size": 8
                    }
                },
                "misc": {
                    "colors": {
                        "segmentStroke": "#000000"
                    }
                }
            });
</script>
